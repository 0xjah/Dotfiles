# Set modifier key to Super (Mod4)
set $mod Mod4

# Borders and gaps
for_window [class=".*"] border pixel 0
gaps inner 5
gaps outer 0

# Font
font pango:Iosevka Nerd Font 12

# Enhanced Pywal colors - using more of the palette
set_from_resource $fg     i3wm.color7  #f0f0f0
set_from_resource $bg     i3wm.color0  #000000
set_from_resource $accent i3wm.color1  #ff0000
set_from_resource $alert  i3wm.color3  #ffff00
set_from_resource $dim    i3wm.color8  #555555
set_from_resource $bright i3wm.color15 #ffffff

# Window colors with better contrast
client.focused          $accent $accent $bright $accent $accent
client.focused_inactive $dim    $dim    $fg     $dim    $dim
client.unfocused        $bg     $bg     $dim    $bg     $bg
client.urgent           $alert  $alert  $bg     $alert  $alert

exec_always --no-startup-id ~/.config/polybar/launch.sh

# Core system
exec --no-startup-id xrdb -merge ~/.Xresources
exec --no-startup-id /usr/lib64/libexec/polkit-kde-authentication-agent-1
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Pywal
exec --no-startup-id wal -R

# Compositor
exec --no-startup-id picom -b

# Notifications
exec --no-startup-id ~/.config/dunst/launchdunst.sh
# System tray
exec --no-startup-id nm-applet
exec --no-startup-id sleep 1 && blueman-applet
exec --no-startup-id sleep 1 && xfce4-power-manager
exec --no-startup-id sleep 2 && kdeconnect-indicator

# Window management - autotiling
exec_always --no-startup-id autotiling

# XDG autostart
exec --no-startup-id dex --autostart --environment i3

# Keybindings
bindsym $mod+q kill
bindsym $mod+Return exec kitty
bindsym $mod+d exec dmenu_run
bindsym $mod+BackSpace exec --no-startup-id "echo -e 'Lock\nLogout\nSleep\nReboot\nShutdown' | dmenu -i -p 'Power:' | xargs -I {} sh -c 'case {} in Lock) i3lock ;; Logout) i3-msg exit ;; Sleep) i3lock && systemctl suspend ;; Reboot) systemctl reboot ;; Shutdown) systemctl poweroff ;; esac'"
bindsym $mod+x exec --no-startup-id ~/.config/i3/lock.sh
bindsym  XF86Tools exec --no-startup-id "$HOME/.local/bin/colorscheme-picker -d $HOME/pics"
bindsym  XF86Calculator exec /usr/local/bin/dmenu-calc
bindsym $mod+Tab exec /usr/local/bin/dmenu_running

# Screenshots
set $s ~/media/screenshots
bindsym Print exec --no-startup-id mkdir -p $s && maim "$s/$(date +%F_%T).png" && notify-send "Screenshot saved"
bindsym $mod+Print exec --no-startup-id mkdir -p $s && maim -i $(xdotool getactivewindow) "$s/window_$(date +%F_%T).png" && notify-send "Window captured"
bindsym Shift+Print exec --no-startup-id mkdir -p $s && maim -s "$s/select_$(date +%F_%T).png" && notify-send "Selection captured"

# Media controls
bindsym XF86AudioMute exec --no-startup-id pamixer -t && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 3 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 3 && pkill -RTMIN+1 i3blocks
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s 5%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# Window management
floating_modifier $mod
tiling_drag modifier titlebar
popup_during_fullscreen smart

# Focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layout
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Gaps
bindsym $mod+z gaps inner current plus 3
bindsym $mod+Shift+z gaps inner current minus 3

# Workspaces
set $ws1 "one"
set $ws2 "two"
set $ws3 "three"
set $ws4 "four"
set $ws5 "five"
set $ws6 "six"
set $ws7 "sevevn"
set $ws8 "eight"
set $ws9 "nine"
set $ws10 "ten"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Reload/restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# Resize mode
mode "resize" {
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
